<persistence>
    <persistence-unit name="requesttracker" transaction-type="JTA">
        <jta-data-source>java:jboss/jdbc/requesttrackerDS</jta-data-source>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.show_sql" value="false"/>
        </properties>
    </persistence-unit>
</persistence>